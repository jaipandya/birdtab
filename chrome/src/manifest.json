{
  "manifest_version": 3,
  "name": "BirdTab - Discover Bird Pictures & Songs in New Tabs",
  "version": "1.2",
  "description": "Enhance your Chrome new tab with beautiful bird photos and soothing sounds. Enjoy a refreshing bird background every time.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.birdtab.app/*",
    "https://search.macaulaylibrary.org/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "refresh-bird": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Refresh bird information"
    },
    "toggle-mute": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Toggle audio mute"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["images/default-bird.webp", "images/birdtab-demo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}