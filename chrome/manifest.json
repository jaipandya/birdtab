{
  "manifest_version": 3,
  "name": "BirdTab",
  "version": "1.0",
  "description": "Transform your new tabs into a vibrant birding experience. Discover stunning birds daily with high-quality images and fascinating facts.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://birdtab-proxy.vercel.app/*",
    "https://search.macaulaylibrary.org/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "refresh-bird": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Refresh bird information"
    },
    "toggle-mute": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Toggle audio mute"
    }
  }
}